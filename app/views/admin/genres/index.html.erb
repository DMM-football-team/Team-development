<div class="container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h4 class="text-center mb-3">ジャンル一覧・追加</h4>
      <%= form_with model: @genre, url: '/admin/genres', method: :post do |f| %>
        <div class="form-inline my-5">
          <%= f.label "ジャンル名" %>
          <div class = "ml-3"><%= f.text_field :name, placeholder: "ジャンル名", class: "form-control genre_title" %></div>
          <div class = "ml-3"><%= f.submit "新規登録", class: "btn btn-lg btn btn-outline-primary px-3" %></div>
          </div>
        <% end %>

        <table class="table table-hover table-inverse mt-3">
          <thead class="table-secondery">
            <tr>
              <th>ジャンル</th>
              <th colspan="1"></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td>
                  <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-sm btn-success edit_genre p-2" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>

