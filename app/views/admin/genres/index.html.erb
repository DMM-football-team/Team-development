<h2 class="head-line title_h2 text-center">ジャンル一覧・追加</h2>
<%= form_with model: @genre, url: '/admin/genres', method: :post do |f| %>
  <h4>ジャンル名</h4>
  <%= f.text_field :name %>
  <%= f.submit '新規投稿', class: "glyphicon glyphicon-pencil btn btn-success" %>
<% end %>

<table class="table table-hover table-inverse table-bordered">
  <thead>
    <tr>
      <th>ジャンル</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td class="genre-td"><%= link_to "編集する", edit_admin_genre_path(genre), class: "glyphicon glyphicon-pencil btn btn-success" %></td>
    </tr>
    <% end %>
  </tbody>
</table>


