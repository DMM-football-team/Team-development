<div class="container">
    <div class="row">
        <h1>商品一覧</h1>
        <table class="table">
        <thead>
            <tr>
                <th>
                    <td>商品ID</td>
                    <td>商品名</td>
                    <td>税抜価格</td>
                    <td>ジャンル</td>
                    <td>ステータス</td>
                </th>
            </tr>
        </thead>

        <tbody>
        <% @items.each do |item| %>
        <th>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td><% if item.is_sales_status == false %>
            販売停止中
            <% else %>
            販売中
            <% end %>
            </td>
        </th>
        <% end %>
        </tbody>
        </table>
    </div>
</div>



