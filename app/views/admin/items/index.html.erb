<div class="container">
 <div class="row">
  <h1>商品一覧</h1>
  <table class="table">
   <thred>
    <tr>
     <th>商品ID</th>
     <th>商品名</th>
     <th>税抜価格</th>
     <th>ジャンル</th>
     <th>ステータス</th>
    </tr>
   </thred>

   <tbody>
    <% @items.each do |item| %>
    <tr>
     <th><%= item.id %></th>
     <th><%= link_to item.name, admin_item_path(item) %></th>
     <th><%= item.price %></th>
     <th><%= item.genre.name %></th>
     <th><% if item.is_sales_status == false %>
     販売停止中
     <% else %>
     販売中
     <% end %>
     </th>
    </tr>
    <% end %>
   </tbody>
  </table>
 </div>
</div>



