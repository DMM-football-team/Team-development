<div class = "container">
    <div class="row">
        <h1>商品詳細</h1>

        <div class="col-xs-5">
           <%= image_tag @item.image, size: "200x200" %>
        </div>

        <div class="col-xs-7">
            <table class="table">
                <tr>
                    <th>商品名</th>
                    <th><%= @item.name %></th>
                </tr>
                <tr>
                    <th>商品説明</th>
                    <th><%= @item.explanation %></th>
                </tr>
                <tr>
                    <th>ジャンル</th>
                    <th><%= @item.genre.name %></th>
                </tr>
                <tr>
                    <th>税抜価格</th>
                    <th><%= @item.price %>円</th>
                </tr>
                <tr>
                    <th>販売ステータス</th>
                    <th><% if @item.is_sales_status == true %>
                        販売中
                        <% else %>
                        販売停止
                        <% end %>
                    </th>
                </tr>
            </table>
            <div>
              <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success glyphicon glyphicon-wrench pull-right" %>
            </div>
        </div>
    </div>
</div>