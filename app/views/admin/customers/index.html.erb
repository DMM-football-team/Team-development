<div class="container">
    <div class = "row">
    <h4 class = "mb-5 text-center">会員一覧</h4>

        <table class="table">
            <thred>
                <tr>
                    <th>会員ID</th>
                    <th>氏名</th>
                    <th>メールアドレス</th>
                    <th>ステータス</th>
                </tr>
            </thred>
            <tbody>
                <% @customers.each do |customer| %>
                <tr>
                    <th><%= customer.id %></th>
                    <th><%= link_to customer.first_name, admin_customer_path(customer.id) %>
                        <%= link_to customer.last_name, admin_customer_path(customer.id) %>
                    </th>
                    <th><%= customer.email %></th>
                    <th><%= customer.is_deleted ? "退会" : "有効" %></th>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
