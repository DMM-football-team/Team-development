<div class="low">
    <h1>会員一覧</h1>
    <tabel class="table">
        <thead>
            <tr>
                <th>会員ID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
            </tr>
        </thead>
        <tbody>
            <% @customers.each do |customer| %>
            <tr>
                <td><%= customer.id %></td>
                <td><%= link_to customer.first_name, admin_customer_path(customer.id) %>
                    <%= link_to customer.last_name, admin_customer_path(customer.id) %>
                </td>
                <td><% if customer.is_deleted == nil %>
                       有効
                    <% else %>
                       退会
                    <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </tabel>
</div>
