	    <div class="row">
			<div class="col-md-3">
				<%= render "sidebar/sidebar", genres: @genres %>
			</div>
			<div class="col-md-9">
				<h4 class="my-3">商品一覧</h4>
			<div class="row">
				<% @items.each do |item| %>
				<div class="col-md-3 album shadow-sm mx-1">
					<%= link_to item_path(item.id) do %>
					<img class="card-img-top"><%= image_tag item.image, size: "100x100" %></img>
					<div class="card-body">
						<%= item.name %>
					<% end %>
						<p class="card-text">¥<%= (item.price).floor %></p>
					</div>
				</div>
			<% end %>
			</div>
			</div>
		</div>
