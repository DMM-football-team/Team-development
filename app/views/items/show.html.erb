<div class="container">
    <div class="row">
        <div class="col-md-3">
            <%= render "sidebar/sidebar", genres: @genres %>
        </div>

    <div class="col-md-9">
        <div class="d-flex flex-row m-5 p-5">
            <div class="wrapper">
                <%= image_tag @item.image, size:"300x255" %>
            </div>


            <div class="table col-md-5 mx-auto">
                <tbody>
                    <tr>
                        <td><%= @item.name %></td><br/>
                        <td><%= @item.explanation %></td><br/>
                        <td>￥<%= (@item.price * 1.1).to_i %>,<span>(税込)</span></td>
                        <td><%= form_with model: @cart_item, url: cart_items_path, local: true do |f| %></td>
                        <td><%= f.select :amount, [['1個', 1], ['2個', 2], ['3個', 3], ['4個', 4], ['5個', 5], ['6個', 6], ['7個', 7], ['8個', 8], ['9個', 9]], selected:1 %>
                                <%= f.hidden_field :item_id, :value => @item.id %>
                                <%= f.submit "カートに入れる" , class: "btn btn-info" %></td>
                            <% end %>
                    </tr>
                </tbody>
            </div>
        </div>
    </div>
   </div>
</div>

