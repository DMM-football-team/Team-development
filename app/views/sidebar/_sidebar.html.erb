<div class="container">
    <div class="row">
        <table class="table table-hover table-inverse mt-3 mx-4">
          <thead class= "table-secondary">
            <tr>
              <th>ジャンル検索</th>
            </tr>
          </thead>
          <tbody>
            <% genres.each do |genre| %>
              <tr>
              <td><%= link_to genre.name, genre_path(genre.id), method: :get %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
</div>