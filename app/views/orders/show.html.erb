<div class="container mt-5">
    <h3>注文履歴詳細</h3>
<div class="row">
    <div class="col-7">
        <h5>注文情報</h5>
        <table class="table table-bordered table table-sm">
          <tr>
            <td class="table-secondary">
                注文日
            </td>
            <td>
                <%= @order.created_at.strftime("%Y年 %m月 %d日") %>
            </td>
          </tr>
          <tr>
            <td class="table-secondary">配送先</td>
            <td>〒<%= @order.post_code %>
                  <%= @order.address %>
                  <%= @order.name %>
            </td>
          </tr>
          <tr>
            <td class="table-secondary">支払方法</td>
            <td>
                <%= @order.payment_method %>
            </td>
          </tr>
          <tr>
            <td class="table-secondary">ステータス</td>
            <td>
                <%= @order.status %>
            </td>
          </tr>
        </table>
    </div>
    <div class="col-3">
       <h5>請求詳細</h5>
        <table class="table table-bordered table table-sm">
          <tr>
            <td class="table-secondary">商品合計</td>
            <td>
                <%= @total %>
            </td>
          </tr>
          <tr>
            <td class="table-secondary">配送料</td>
            <td>
                800円
            </td>
          </tr>
          <tr>
            <td class="table-secondary">ご請求金額</td>
            <td>
              <%= @total + 800 %>
            </td>
          </tr>
        </table>
    </div>
     <div class="row">
        <div class="col-11 mt-5 mx-auto">
        <h5>注文内容</h5>
        <table class="table table-bordered table table-sm">
          <thead class="table-secondary">
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>個数</th>
              <th>小計</th>
          </thead>
          <tbody>
            <%# total = 0 %>
          <% @order_details.each do |order_detail| %>
              <tr>
                  <td><%= order_detail.item.name %></td>
                  <td><%= order_detail.item.price %>円</td>
                  <td><%= order_detail.amount %>個</td>
                  <td><%= (order_detail.price)*(order_detail.amount) %>円</td>
              </tr>
          <% end %>
          </tbody>
        </table>
        </div>
    </div>
</div>
</div>
