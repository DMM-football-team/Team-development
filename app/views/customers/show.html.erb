<h2 class="head-line text-center title_h2">マイページ</h2>
		
		<div class="text-center">
			<p><strong class="information-link"><i class="far fa-user"></i>登録情報</strong>
		<%= link_to " 編集する", edit_customer_path(@customer.id), class: "glyphicon glyphicon-pencil btn btn-success" %>
		</p></div>

		<table class="table table-bordered">
					<tr>
						<td>氏名</td>
						<td><%= @customer.last_name %><%= @customer.first_name %></td>
					</tr>
					<tr>
						<td>カナ</td>
						<td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
					</tr>
					<tr>
						<td>郵便番号</td>
						<td><%= @customer.post_code %></td>
					</tr>
					<tr>
						<td>住所</td>
						<td><%= @customer.address %></td>
					</tr>
					<tr>
						<td>電話番号</td>
						<td><%= @customer.phone_number %></td>
					</tr>
					<tr>
						<td>メールアドレス</td>
						<td><%= @customer.email %></td>
					</tr>
			</table>

			<div class="text-center">
				<P><strong class="shipping-link">配送先</strong>
					<%= link_to " 一覧を見る", customer_shipping_addresses_path(current_customer), class: "glyphicon glyphicon-folder-open btn btn-info" %>
				</p>
				<p><strong class="order-link">注文履歴</strong>
					<%= link_to " 一覧を見る", customer_orders_path(current_customer), class: "glyphicon glyphicon-folder-open btn btn-info" %>
				</p>
			</div>