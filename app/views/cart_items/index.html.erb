<div class="conteiner my-6">
    <div class="row">
         <div class="offset-1">
             <h2 class="red-border px-3 pb-1">ショッピングカート</h2>
         </div>
    </div>
    <div class="row mt-5">
        <div class="offset-1 col-9">
            <table class="table table-borderless">
                <thead>
                    <tr class="red-border">
                        <th>商品名</th>
                    　　<th>単価（税込）</th>
                    　　<th>数量</th>
                    　　<th>小計</th>
                    　　<th colspan="1"></th>
                    </tr>
                </thead>
                <% @cart_items.each do |cart_item| %>
                    <tbody>
                        <tr class="black-border">
                            <td class="align-middle">
                                <%= image_tag cart_item.item.get_image, size: "50x50" %>
                                <%= cart_item.item.name %>
                            </td>
                            <td><%= cart_item.item.with_tax_price %></td>
                            <td><%= form_with model: cart_item, local: true do |f| %>
                            <div class="row">
                                <%= f.select :amount, [['1個', 1], ['2個', 2], ['3個', 3], ['4個', 4], ['5個', 5], ['6個', 6], ['7個', 7], ['8個', 8], ['9個', 9]], include_blank: true, placeholder: "個数選択" %>
                                <%= f.submit "変更" , class: "btn btn-info" %>
                                <% end %>
                            </div>
                            </td>
                            <td class="align-middle">
                                <%= cart_item.sum_of_price %>
                            </td>
                                <td class="align-middle"><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class:"btn btn-danger" %></td>
                            </tr>
                    </tbody>
                <% end %>
            </table>
        </div>
    </div>
    <div class="row my-3">
        <div class="offset-9">
            <div class="red-border px-3 pb-1">合計金額<%= @total.round.to_s(:delimited)%></div>
        </div>
    </div>

    <div class="row">
        <div class="offset-1 col-2">
            <%= link_to "買い物を続ける", root_path, class:"btn btn-info" %>
        </div>
         <div class="offset-1 col-2">
      <%= link_to " カートを空にする", cart_items_all_destroy_path, method: :delete, data: {confirm: 'カートを空にして本当によろしいですか？'}, class: "glyphicon glyphicon-trash btn btn-danger" %>
        </div>
    </div>
    <div class="form-row text-center my-5">
        <% if @cart_items != [] %>
        <div class="col-12">
            <%= link_to "情報入力に進む", new_customer_order_path(current_customer), class:"btn btn-success" %>
        <% end %>
        </div>
    </div>
</div>

