<h2 class="head-line text-center title_h2">配送先編集</h2>

<%= form_for @shipping_address, url: customer_shipping_address_path(current_customer.id,@shipping_address.id) do |f| %>
      <div class="field address">
        <%= f.label :郵便番号 %><br />
        <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
      </div><br>
      <div class="field address">
        <%= f.label :住所 %><br />
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div><br>
      <div class="field address">
        <%= f.label :宛名 %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div><br>
      <div class="field">
      <%= f.submit "編集する", class:"btn btn-primary" %>
      </div>
<% end %>
<div class="shipping-back col-xs-12">
    <%= link_to "配送先登録/一覧へ戻る", customer_shipping_addresses_path, data: {"turbolinks" => false}, class: "btn btn-info" %>
</div>