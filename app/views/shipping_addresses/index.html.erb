<h2><i class="fas fa-truck"></i>配送先登録/一覧</h2>

<%= form_for @shipping_address, url:customer_shipping_addresses_path, method: :post do |f| %>
<div class="row">

    <div class="form-group col-xs-12">
        <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-xs-3 control-label" %>
        <%= f.text_field :post_code, class: "col-xs-4 form-control-static postal_code" %>
    </div>
    <div class="form-group col-xs-12">
        <%= f.label :"住所" ,class: "col-xs-3 control-label" %>
        <%= f.text_field :address, class: "col-xs-7 form-control-static address" %>
    </div>
    <div class="form-group col-xs-12">
        <%= f.label :"宛名" ,class: "col-xs-3 control-label" %>
        <%= f.text_field :name, class: "col-xs-4 form-control-static name" %>
    </div>
    </div>
        <%= f.submit '新規登録' ,class: "col-xs-2 pull-right btn-lg btn-success " %>
    </div>
</div>
<% end %>

<table class="table table-hover table-bordered">
    <thead>
        <tr class="info">
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="2"></th>
        </tr>
    </thead>
    
    <tbody>
      <% @shipping_addresses.each do |shipping_address| %>
        <tr>
            <td>
                <%= shipping_address.post_code %>
            </td>
            <td class="text-left">
                <%= shipping_address.address %>
            </td>
            <td class="text-left">
                <%= shipping_address.name %>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>